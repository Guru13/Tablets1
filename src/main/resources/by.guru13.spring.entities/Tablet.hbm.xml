<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="by.guru13.spring.entities.Tablet" table="tablet" schema="" catalog="tablets">
        <id name="id" column="id"/>
        <property name="brand" column="brand"/>
        <property name="price" column="price"/>
        <property name="year" column="year"/>
        <property name="ram" column="ram"/>
        <property name="rom" column="rom"/>
        <property name="system" column="system"/>
        <property name="battery" column="battery"/>
        <property name="color" column="color"/>
        <property name="screenSize" column="screenSize"/>
        <property name="image" column="image"/>
    </class>
</hibernate-mapping>